import java.util.HashMap;

//leetcode submit region begin(Prohibit modification and deletion)
class Solution {
    public int findShortestSubArray(int[] nums) {
        int[] count=new int[50000];
        int maxflunt=0;
        HashMap<Integer,Integer> firstPosition=new HashMap<Integer,Integer>();
        HashMap<Integer,Integer> lastPosition=new HashMap<Integer,Integer>();
        if(nums.length==1) return 1;
        
        for(int i=0;i<nums.length;i++){
            count[nums[i]]++;
            maxflunt=Math.max(count[nums[i]],maxflunt);
            if(firstPosition.get(nums[i])==null){
                firstPosition.put(nums[i],i);
            }else {
                lastPosition.put(nums[i],i);
            }
        }
        int minlength=Integer.MAX_VALUE;
        for (int i=0;i<nums.length;i++){
            if(maxflunt<2) return 1;
            if(count[nums[i]]==maxflunt){
                
                minlength=Math.min(lastPosition.get(nums[i])-firstPosition.get(nums[i])+1,minlength);
            }
        }
        return minlength;



    }
}
//leetcode submit region end(Prohibit modification and deletion)
